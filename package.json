{
  "name": "kenpo-data-entry",
  "version": "0.1.0",
  "description": "data entry tool for the mykenpo database",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint src tools",
    "lint:css": "stylelint \"src/**/*.{css,less,scss,sss}\"",
    "lint:staged": "lint-staged",
    "lint": "npm run lint:js && npm run lint:css",
    "clean": "babel-node tools/run clean",
    "copy": "babel-node tools/run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WintermuteConsulting/kenpo-data-entry.git"
  },
  "contributors": [
    "Ben Brunk",
    "Andrew Falconer"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WintermuteConsulting/kenpo-data-entry/issues"
  },
  "homepage": "https://github.com/WintermuteConsulting/kenpo-data-entry#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mongodb": "^2.2.20",
    "openurl": "^1.1.1",
    "ramda": "^0.23.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-rewire": "^1.0.0",
    "babel-preset-env": "^1.1.8",
    "chokidar": "^1.6.1",
    "editorconfig-tools": "^0.1.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "front-matter": "^2.1.2",
    "glob": "^7.1.1",
    "lint-staged": "^3.3.0",
    "markdown-it": "^8.2.2",
    "mkdirp": "^0.5.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.5.4",
    "stylefmt": "^5.1.2",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [],
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true
    },
    "rules": {
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "react/jsx-filename-extension": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.{cmd,html,json,md,sh,txt,xml,yml}": [
      "editorconfig-tools fix"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,less,scss,sss}": [
      "stylefmt",
      "stylelint"
    ]
  }
}

{
  "name": "kenpo-data-entry",
  "version": "0.1.0",
  "description": "data entry tool for the mykenpo database",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint src tools",
    "lint:css": "stylelint \"src/**/*.{css,less,scss,sss}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WintermuteConsulting/kenpo-data-entry.git"
  },
  "contributors": [
    "Ben Brunk",
    "Andrew Falconer"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WintermuteConsulting/kenpo-data-entry/issues"
  },
  "homepage": "https://github.com/WintermuteConsulting/kenpo-data-entry#readme",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mongodb": "^2.2.20",
    "openurl": "^1.1.1",
    "ramda": "^0.23.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [],
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true
    },
    "rules": {
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "react/jsx-filename-extension": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  }
}
